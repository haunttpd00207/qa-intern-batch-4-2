<% provide(:title, 'Sign Up') %>
<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' , object: f.object%>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :phone %>
      <%= f.number_field :phone %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :picture, "Your avatar" %>
      <%= f.file_field :picture %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create New Account", class: "btn btn-primary" %>

      <p class="policy-sign-up">
        By clicking "Sign up" you indicate that you have read and agree to the
        <a target="_blank" href="#">privacy policy</a>
        and<a target="_blank" href="#">terms of service.</a>
      </p>
    <% end %>
  </div>
</div>
